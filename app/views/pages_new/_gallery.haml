  :coffee
    clearPhotos = ->
      $("#photos").html("")


    $(".f_menu a").on "click", (evt) ->
      clearPhotos()

      # TODO: add loading
      $("#photos").html("<div class='gallery_loading center-content'> Loading...</div>")

      id = $(evt.currentTarget).data "setId"
      $("#photos").data "setId", id

      gallery = new FlickrGallery()
      gallery.init ->
        clearPhotos()

