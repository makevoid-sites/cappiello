= render partial: "pages_new/corsi"

:javascript
  $.urlParam = function(name){
    var results = new RegExp('[\?&]' + name + '=([^&#]*)').exec(document.location.search)
    if (results==null)
      return null
    else
      return results[1] || 0
  }

:coffee

  $ ->
    filter = $.urlParam "s"

    grid = $ '.grid'
    grid.isotope
      filter: ".\#{filter}"
