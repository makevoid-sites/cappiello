-# expire_fragment "name" # where?
- cache "nav_#{current_lang}" do
  #nav_cont
    %ul#nav
      - pages.each_with_index do |page, idx|
        - case page.title_url_en
        - when "annual_courses"
          %li
            %ul.subnav
              %li= link_to "Visual Design", page_path(id: tf("visual_design_corsi_annuali", "visual_design_annual_training"))
              %li= link_to "Interior Design", page_path(id: tf("interior_design_corsi_annuali", "interior_design_annual_training"))
            = link_to tf("Corsi Annuali", "Annual Courses"), js_void
        - when "master_courses"
          %li
            %ul.subnav
              %li= link_to "Visual Design", page_path(id: tf("visual_design_corso_master", "visual_design_master_course"))
              %li= link_to "Interior Design", page_path(id: tf("interior_design_corso_master", "interior_design_master_course"))
            = link_to tf("Corsi Master", "Master Courses"), js_void
        - when "specialstic_courses"
          %li
            %ul.subnav
              %li
                %ul.subnav.sub2
                  %li= link_to tf("Grafica Editoriale", "Editorial Graphics"), page_path(id: tf("grafica_editoriale", "press_graphics"))
                  %li= link_to tf("Illustrazione", "Illustration"), page_path(id: tf("illustrazione_visual_design", "visual_design_illustration"))
                  %li= link_to tf("Photoshop", "Photoshop"), page_path(id: tf("photoshop_visual_design", "visual_design_photoshop"))
                  %li= link_to tf("Web Design", "Web Design"), page_path(id: tf("web_design_visual_design", "visual_design_webdesign"))
                = link_to tf("Visual Design"), js_void
              %li
                %ul.subnav.sub2
                  %li= link_to tf("Modellazione 3D", "3D modelling"), page_path(id: tf("interior_design_modellazione_3d", "interior_design_3d_modelling"))
                  %li= link_to tf("Rendering", "Rendering"), page_path(id: tf("rendering_interior_design", "interior_design_rendering"))
                  %li= link_to tf("Sketch-Up", "Sketch-Up"), page_path(id: tf("sketch_up_interior_design", "interior_design_sketchup"))
                  %li= link_to tf("Autocad", "Autocad"), page_path(id: tf("autocad_interior_design", "interior_design_autocad"))
                  %li= link_to tf("3D Studio Max", "3D Studio Max"), page_path(id: tf("3d_studio_max_interior_design", "interior_design_3dstudiomax"))
                  %li= link_to tf("V-Ray", "V-Ray"), page_path(id: tf("v-ray", "vray"))
                = link_to tf("Interior Design"), js_void
                
            = link_to tf("Corsi specialistici", "Specialist Courses"), js_void

        - when "dates_and_times"
        - when "interior_design"
        - when "summer_courses" # corsi estivi
          %li
            %ul.subnav
              %li= link_to tf("Visual Design", "Short Courses"), page_path(id: tf("visual_design_corsi_brevi", "visual_design_short_courses"))
              %li= link_to tf("Interior Design", "Short Courses"), page_path(id: tf("interior_design_corsi_brevi", "interior_design_short_courses"))
            = link_to tf("Corsi brevi", "Short Courses"), js_void
        - when "workshops"
          %li
            %ul.subnav
              %li
                = link_to tf("Visual Design"), page_path(id: tf("laboratorio_visual_design", "visual_design_workshop"))
              %li
                = link_to tf("Interior Design"), page_path(id: tf("laboratorio_interior_design", "interior_design_workshop"))
            = link_to tf("Laboratori", "Workshops"), js_void

        - else
          %li
            = link_to tr(page).title, pag_path(page)


    #social
      = link_to image_tag("icons/fb_icon.png"), "https://www.facebook.com/accademiaartedesigncappiello"
      -# "http://www.facebook.com/pages/Accademia-dArte-e-Design-Leonetto-Cappiello-Firenze/124282164308467"
      = link_to image_tag("icons/vimeo_icon.png"), "http://vimeo.com/user5798268"
      = link_to image_tag("icons/flickr_icon.png"), "http://www.flickr.com/photos/accademiacappiello/"
      = link_to image_tag("icons/twitter_icon.png"), "http://twitter.com/Acc_Cappiello"

