%h2= tf("Registrazione", "Register")

- error_messages_for @user

= form_for @user do |f|
  = f.label :first_name, tf("Nome", "First Name")
  = f.text_field :first_name
  = f.label :last_name, tf("Cognome", "Last Name")
  = f.text_field :last_name
  = f.label :email, "Email"
  = f.text_field :email
  = f.label :password, "Password"
  = f.password_field :password
  
  = f.check_box :newsletter
  = f.label     :newsletter,  tf("desidero ricevere informazioni su iniziative e nuovi corsi", "I want to receive information about new courses")
  = f.submit "Registrati", class: "submit"