  def home_url
    "/pages/l_accademia"
  end

  def nav_link_raw(label, link, mobile:)
    url = url_for link
    unless mobile
      haml_tag(:a, href: url, class: "#{url_active url}") do
        haml_concat label
      end
    else
      # link_to label, link
      haml_tag(:a, class: "btn btn-small bg-muted color-white", href: url) do
        haml_concat label
      end
    end
  end

  def url_active(url)
    "active" if request.path == url || request.path == "/" && url == home_url
  end

